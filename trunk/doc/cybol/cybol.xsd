<xs:schema
    xmlns:xs='http://www.w3.org/2001/XMLSchema'
    targetNamespace='http://www.cybop.net'
    xmlns='http://www.cybop.net'
    elementFormDefault='qualified'>
    <xs:element name='model'>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref='part' minOccurs='0' maxOccurs='unbounded'/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name='part'>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref='property' minOccurs='0' maxOccurs='unbounded'/>
            </xs:sequence>
            <xs:attribute name='name' type='xs:string' use='required'/>
            <xs:attribute name='channel' type='xs:string' use='required'/>
            <xs:attribute name='abstraction' type='xs:string' use='required'/>
            <xs:attribute name='model' type='xs:string' use='required'/>
        </xs:complexType>
    </xs:element>
    <xs:element name='property'>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref='constraint' minOccurs='0' maxOccurs='unbounded'/>
            </xs:sequence>
            <xs:attribute name='name' type='xs:string' use='required'/>
            <xs:attribute name='channel' type='xs:string' use='required'/>
            <xs:attribute name='abstraction' type='xs:string' use='required'/>
            <xs:attribute name='model' type='xs:string' use='required'/>
        </xs:complexType>
    </xs:element>
    <xs:element name='constraint'>
        <xs:complexType>
            <xs:attribute name='name' type='xs:string' use='required'/>
            <xs:attribute name='channel' type='xs:string' use='required'/>
            <xs:attribute name='abstraction' type='xs:string' use='required'/>
            <xs:attribute name='model' type='xs:string' use='required'/>
        </xs:complexType>
    </xs:element>
</xs:schema>
